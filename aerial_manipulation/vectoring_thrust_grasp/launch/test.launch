<?xml version="1.0"?>
<launch>

  <arg name="from_real_joint_angle" default="false" />
  <arg name="search_maximum" default="false" />
  <arg name="verbose" default="false" />

  <group unless="$(arg from_real_joint_angle)">
    <param name="dragon/robot_description" command="$(find xacro)/xacro.py '$(find vectoring_thrust_grasp)/robots/dragon/quad.urdf.xacro' robot_name:=dragon " />
  </group>

  <node pkg="vectoring_thrust_grasp" type="vectoring_thrust_test_node" name="vectoring_thrust_test_node" output="screen" ns="dragon">
    <param name="weight_torque" value="4.0" />
    <param name="weight_force" value="1.0" />
    <param name="grasp_force_norm" value="10.0" />
    <param name="force_on_thrust_frame" value="true" /> <!-- chose the force point on the thrust frame or on the gimbal roll frame(2D)  -->
    <param name="max_vectoring_force" value="10.0" />

    <param name="verbose" value="$(arg verbose)" />

    <param name="from_real_joint_angle" value="$(arg from_real_joint_angle)" />
    <param name="test" value="$(eval not arg('from_real_joint_angle'))"  />
    <param name="search_maximum" value="$(arg search_maximum)"  />

  </node>
</launch>
